<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.add_post">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/make_anounce_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Candidate For Election"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/show_candi"
        android:layout_width="206dp"
        android:layout_height="31dp"
        android:layout_below="@+id/drop_down_position"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="8dp"
        android:background="#E91E63"
        android:text="Show Candidate"
        android:textColor="#FFF" />
    <Spinner
        android:id="@+id/drop_down_year"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/make_anounce_text"
        android:layout_marginTop="13dp"
        android:background="@drawable/border"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/drop_down_dept"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/drop_down_year"
        android:layout_marginTop="13dp"
        android:background="@drawable/border"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/drop_down_block"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/drop_down_dept"
        android:layout_marginTop="13dp"
        android:background="@drawable/border"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/drop_down_position"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/drop_down_block"
        android:layout_marginTop="13dp"
        android:background="@drawable/border"
        android:spinnerMode="dropdown"
        android:visibility="visible" />


    <Button
        android:id="@+id/button_show_candi"
        android:layout_width="206dp"
        android:layout_height="31dp"
        android:layout_below="@+id/drop_down_position"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="8dp"
        android:background="#E91E63"
        android:text="Show Candidate"
        android:textColor="#FFF" />





</RelativeLayout>