<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.add_post">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/make_anounce_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Announcement"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/make_anounce_text"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:hint="Please Enter Announcement Title"
        android:textColor="#E91E63"

        />

    <Spinner
        android:id="@+id/spinner_drop_down"
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/post_title"
        android:layout_marginTop="26dp"
        android:background="@drawable/border"
        android:spinnerMode="dropdown"
        android:visibility="visible" />

    <TextView
        android:id="@+id/button_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_drop_down"
        android:layout_marginTop="28dp"
        android:text="Do you want registeration button" />


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_drop_down"
        android:layout_marginLeft="45mm"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/post_Content"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_below="@+id/checkBox"
        android:layout_marginTop="26dp"
        android:background="@drawable/border"
        android:gravity="top"
        android:hint="Describe your announcement or issue"
        android:textColor="#E91E63" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_Content"
        android:layout_marginTop="26dp"
        android:background="#E91E63"
        android:text="Make Announcement"
        android:textColor="#FFF" />


</RelativeLayout>